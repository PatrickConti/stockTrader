<main class="pt-5 mx-lg-5">
  <div class="container-fluid mt-5">

    <%- include heading.ejs %>

      <!-- Button trigger modal -->
    <!--Grid row-->
    <div class="row wow fadeIn">
      <!--Grid column-->
      <div class="col-md-12">
        <button type="button" class="btn btn-primary float-right" data-toggle="modal" data-target="#addPortfolioModal">
          <i class="fa fa-plus fa-lg mr-3"></i> Add Portfolio
        </button>
      </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="addPortfolioModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Add a new Portfolio</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
          </button>
          </div>
          <div class="modal-body">
            <!-- Material input text -->
            <div class="md-form">
                <i class="fa fa-paperclip prefix grey-text"></i>
                <input type="text" id="portfolioName" class="form-control">
                <label for="materialFormRegisterNameEx">Portfolio name</label>
            </div>
          </div>
          <div class="modal-footer">
            <%# <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> %>
            <button id="addPortfolioButton" type="button" class="btn btn-primary">Add</button>
          </div>
        </div>
      </div>
    </div>

      <!--Grid row-->
      <div class="row wow fadeIn">
        <!--Grid column-->
        <div class="col-md-12 mb-4">
          <!--Card-->
          <div class="card">
            <!--Card content-->
            <div class="card-body">
              <!-- Table  -->
              <table id="portfolios" class="table table-hover">
                <!-- Table head -->
                <thead class="blue-grey lighten-4">
                  <tr>
                    <th>#</th>
                    <th>Owner</th>
                    <th>Total</th>
                    <th>Loyalty Level</th>
                    <th width="5%"></th>
                  </tr>
                </thead>
                <!-- Table head -->
                <!-- Table body -->
                <tbody>
                  <!-- Example of what's filled in with JS
                <tr>
                  <th scope="row">1</th>
                  <td>Cell 1</td>
                  <td>Cell 2</td>
                  <td>Cell 3</td>
                </tr> -->
                </tbody>
                <!-- Table body -->
              </table>
              <!-- Table  -->
            </div>
          </div>
          <!--/.Card-->
        </div>
        <!--Grid column-->
      </div>
  </div>
</main>

<script type="text/javascript" src="/js/portfolios.js"></script>
